<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CustomCriteriaLogicRequired</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   ISPICKVAL(CriteriaLogicType__c, &apos;Custom&apos;),
   ISBLANK(CustomCriteriaLogic__c)
)</errorConditionFormula>
    <errorDisplayField>CustomCriteriaLogic__c</errorDisplayField>
    <errorMessage>Custom Criteria Logic is required when Criteria Logic Type = &apos;Custom Logic&apos;</errorMessage>
</ValidationRule>
